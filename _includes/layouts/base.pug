doctype html
html
  head
    title #{ title }

    link(rel="stylesheet" href="/css/tufte.css")
    link(rel="stylesheet" href="/css/11dim.css")

    link(rel="alternate" type="application/atom+xml" href="/feed.xml")

    link(rel="webmention" href="https://webmention.io/11d.im/webmention")
    link(rel="pingback" href="https://webmention.io/11d.im/xmlrpc")

    script(src="https://identity.netlify.com/v1/netlify-identity-widget.js")
    script.
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }

  body
    include ../parts/header.pug

    block content
      article
          section !{content}

    include ../parts/footer.pug
