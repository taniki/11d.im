extends ./base.pug

block content
  -
    const day = (page.date.getDate()).toString().padStart(2, '0')
    const month = (page.date.getMonth()+1).toString().padStart(2, '0')
    const year = page.date.getFullYear()
    var prettyDate = `${day}.${month}.${year}`

  section
    h1 !{ title }
    p.subtitle #{ prettyDate }
    .
      !{ content }
